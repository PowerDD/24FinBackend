extends layout

block content

	#dv-loading.col-md-9

		if info.memberType == 'administrator'
			#dv-summary.row
				.col-md-4.col-xs-6
					.small-box.bg-aqua
						.inner
							h3#numberNews 0
							p #{__('News')}
						.icon
							i.ion.ion-chatbubble-working
						a.small-box-footer(href='#')
							| #{__('More Info')} 
							i.fa.fa-arrow-circle-right

				.col-md-4.col-xs-6
					.small-box.bg-red
						.inner
							h3#numberWallet 0
							p #{__('Remax Wallet')}
						.icon
							i.ion.ion-social-bitcoin
						a.small-box-footer(href='#')
							| #{__('More Info')} 
							i.fa.fa-arrow-circle-right

				.col-md-4.col-xs-6
					.small-box.bg-orange
						.inner
							h3#numberOrderHistory 0
							p #{__('Order History')}
						.icon
							i.ion.ion-bag
						a.order_history.small-box-footer(href='#')
							| #{__('More Info')} 
							i.fa.fa-arrow-circle-right

			#dv-detail.row
				.col-md-12.col-xs-12

					.box.box-primary
						.box-header
							h3.box-title #{__('Order History')}
						.box-body.table-responsive
							table#tb-order.table.table-condensed.table-hover(width="100%")
								thead
									tr.font-sm
										th.text-right(width="130")  #{__('order number')}
										th.text-right(width="120")  #{__('orderDate')}
										th.text-right #{__('status')}
										th.text-right(width="ุ65")  #{__('item(s)')}
										th.text-right(width="65")  #{__('piece(s)')}
										th.text-right(width="75")  #{__('grand total')}
								tbody


		else
			.callout.callout-info.text-center
				span.loading.text-muted &nbsp;#{__('welcome to new system v2')}


	.col-md-3
		.box.box-success.box-solid
			.box-header
				h3.box-title LINE Official
			.box-body
				center Line ID : 
					b @RemaxThailand
					br
					img.img-responsive.margin-top-5.margin-bottom-5(src="/images/line-remaxthailand.png")
				|  กรุณา Add Line เพื่อสอบถามข้อมูล และรับสิทธิพิเศษต่างๆ รวมทั้งแจ้งการชำระเงินเพื่อยืนยันคำสั่งซื้อค่ะ